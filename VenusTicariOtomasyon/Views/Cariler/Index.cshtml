@using VenusTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Cariler</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Cariler</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Cari Listesi</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="5%">ID</th>
                                        <th>Adı</th>
                                        <th>Soyadı</th>
                                        <th>Ünvan</th>
                                        <th>Şehir</th>
                                        <th>Mail</th>
                                        <th width="15%">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model)
                                    {
                                        <tr>
                                            <td>@c.CariID</td>
                                            <td>@c.CariAd</td>
                                            <td>@c.CariSoyad</td>
                                            <td>@c.CariUnvan</td>
                                            <td>@c.CariSehir</td>
                                            <td>@c.CariMail</td>
                                            <td>
                                                <a class="btn-sm btn-primary" href="/Cariler/CariDetay/@c.CariID">Detaylar</a>
                                                <a class="btn-sm btn-secondary" href="/Cariler/CariGetir/@c.CariID">Güncelle</a>
                                                <a class="btn-sm btn-danger" href="/Cariler/CariSil/@c.CariID">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Cari Adı</th>
                                        <th>Soyadı</th>
                                        <th>Ünvan</th>
                                        <th>Şehir</th>
                                        <th>Mail</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>

